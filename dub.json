{
	
	"description": "A minimal D application.",
	"copyright": "Copyright © 2015, joshka",
	"authors": ["joshka"],
	"dependencies": {
		"randora-engine" : ">=0.0.1"
	}
}

{
	"name": "randora-game",
	"description": "Randora Game",
	"copyright": "Copyright © 2015, Master Foo",
	"authors": ["Master Foo"],
	"homepage": "https://github.com/Cabal-Syndicate",
	"license": "Attribution-NonCommercial-ShareAlike 4.0 International",
	"targetPath": "bin",
	"dependencies": {
		"randora-engine" : ">=0.0.1"
	},
	"sourcePaths": [
		"source"
	],
	"libs":[
		"SDL2",
		"SDL2_image",
		"SDL2_ttf",
		"SDL2_mixer"
	],
	"preGenerateCommands": [
		"./tools/pre_generate_commands"
	],
	"postGenerateCommands": [
		"./tools/post_generate_commands"
	],
	"preBuildCommands": [
		"./tools/pre_build_commands"
	],
	"postBuildCommands": [
		"./tools/post_build_commands"
	],
	"buildtypes" : {
		"plain" : {
			"buildOptions" : []
		},
		"debug" : {
			"buildOptions" : [
				"debugMode",
				"debugInfo"
			],
			"dflags": [
				"-g",
				"--debug"
			]
		},
		"release" : {
			"buildOptions" : [
				"releaseMode",
				"optimize",
				"inline"
			]
		},
		"unittest" : {
			"buildOptions" : [
				"unittests",
				"debugMode",
				"debugInfo"
			]
		},
		"docs" : {
			"buildOptions" : [
				"syntaxOnly"
			],
			"dflags": [
				"-c",
				"-Dddocs"
			]
		},
		"ddox" : {
			"buildOptions" : [
				"syntaxOnly"
			],
			"dflags": [
				"-c",
				"-Df__dummy.html",
				"-Xfdocs.json"
			]
		},
		"profile" : {
			"buildOptions" : [
				"profile",
				"optimize",
				"inline",
				"debugInfo"
			]
		},
		"cov" : {
			"buildOptions" : [
				"coverage",
				"debugInfo"
			]
		},
		"unittest-cov" : {
			"buildOptions" : [
				"unittests",
				"coverage",
				"debugMode",
				"debugInfo"
			]
		}
	}
}
